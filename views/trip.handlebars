  <div class="row justify-content-center" style="text-align: center">
    <div class="header">
      {{!-- <form>
        <input type="text" placeholder="Search">
        <ion-icon name="search-outline"></ion-icon>
      </form> --}}
    </div>
  </div>
  <div class="row justify-content-center" style="text-align: center">
    <div class="gallery">
      
    </div>
    <a class="load-more" data-img="curated"></a>
  </div>

  <br>
  <div class="row justify-content-center" style="text-align: center">   
    <div class="col-5">{{trip.startDate}} - {{trip.endDate}}</div>
    <div class="col-5">{{trip.TripDetail.rating}}/5</div>
  </div>
  <br>
  <div class="row justify-content-center">
    <div class="col-10">
      <div class="card">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">The best food I ate was {{trip.TripDetail.food}}.</li>
          <li class="list-group-item">The most unexpected experience was {{trip.TripDetail.experience}}!</li>
          <li class="list-group-item">I learned {{trip.TripDetail.lesson}}.</li>
          <li class="list-group-item">Will I revisit? {{trip.TripDetail.revisit}}.</li>
        </ul>
      </div>
    </div>
  </div>
  <br>
  {{#each trip.TripComments as |comment|}}
    <div class="row justify-content-center">
      <div class="col-10">
        {{> comment}}
      </div>
    </div>
  <br>
  {{/each}}
  <div class="row justify-content-center">
    <div class="col-10">
      <form class="newCommentSubmit">
        <div class="form-group">
          <label for="formGroupExampleInput1">Do you have any further comments?</label>
          <input type="hidden" id="commentlink" name="tripId" value="{{trip.id}}">
          <input type="text" class="form-control" id="comment">
        </div>
        <button type="submit" class="btn">Submit</button>
      </form>
    </div>
  </div>
</div>
{{> script}}
<script src='/js/index.js'></script>
